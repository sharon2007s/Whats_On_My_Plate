<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Page Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Steps Tracker"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Daily Goal Display and Entry -->
        <TextView
            android:id="@+id/tv_current_goal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daily Goal: 10000 steps"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/et_daily_goal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter new daily goal (e.g., 12000)"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="number"/>

        <!-- Manual Step Entry -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Steps:"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_step_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter step count manually"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:inputType="number"/>

        <!-- Manual Entry Button -->
        <Button
            android:id="@+id/btn_manual_entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Steps Manually"
            android:backgroundTint="#00C853"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"/>

        <!-- Google Fit Integration Button -->

        <!-- Step History -->
        <TextView
            android:id="@+id/tv_step_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Step History:"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="#333333"
            android:layout_marginBottom="16dp"/>

        <!-- Save Steps Button -->
        <Button
            android:id="@+id/btn_save_steps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save and Update Home Page"
            android:backgroundTint="#00C853"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>
</ScrollView>